import { ApiProperty } from '@nestjs/swagger';
export class {{BaseName}}CreateDto {
	{{#each property}}
    /**
     * {{documentation.[0].text}}
     */
    @ApiProperty()
    {{#if isOptional }}
    @IsOptional()
    {{escapedName}}?: {{{type}}};

