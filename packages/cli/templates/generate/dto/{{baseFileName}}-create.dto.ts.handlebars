import { IsNotEmpty, IsOptional } from 'class-validator';
{{#each dotImports}}
{{{this}}}
{{/each}}
export class {{BaseName}}CreateDto {
	{{#each properties}}
    {{#unless isSpecialColumn }}
    /**
     * {{documentation}}
     */
    {{#if isOptional }}
    @IsOptional()
    {{name}}?: {{{type.value}}};

    {{else}}
    @IsNotEmpty({
        message: '{{documentation}}不能为空',
    })
    {{name}}: {{{type.value}}};

    {{/if}}
    {{/unless}}
	{{/each}}
}
